<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/nemo"
        android:text="  hi"
        android:visibility="visible"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:background="@drawable/nemo"
        android:visibility="visible">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="hi"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text1"
            android:layout_below="@+id/text1"
            android:layout_marginTop="10dp"
            android:text="안녕"
            android:textColor="#AA9"/>

        <ImageView
            android:id="@+id/arrow_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/arrow"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sound"
            android:id="@+id/sound_word1"
            android:layout_toLeftOf="@id/arrow_word"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/star_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            android:layout_toLeftOf="@+id/sound_word1"
            android:layout_alignBottom="@id/sound_word1"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/change_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/change"
            android:layout_toLeftOf="@+id/star_word"
            android:layout_alignBottom="@+id/star_word" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search"
        android:layout_gravity="center"
        android:visibility="invisible"/>

</LinearLayout>